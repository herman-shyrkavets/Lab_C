<Window x:Class="Lab_9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lab 9" Height="750" Width="900">
    <Grid>
        <TabControl Margin="10">

            <!-- Вкладка 1: Комбинационный элемент -->
            <TabItem Header="Комбинационный элемент">
                <StackPanel Margin="10">
                    <TextBlock Text="Введите входы (0 или 1 через пробел):" FontSize="16"/>
                    <TextBox Name="CombInputsTextBox" PreviewTextInput="CombInputsTextBox_PreviewTextInput"
                             FontSize="16" Height="35" Text="0 0 0 0" Margin="0,5,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Вычислить" Click="CalcCombElementButton_Click"
                                Width="150" Height="45" FontSize="16" Margin="0,0,10,0"/>
                        <Button Content="Инвертировать" Click="InvertCombElementButton_Click"
                                Width="150" Height="45" FontSize="16"/>
                    </StackPanel>
                    <TextBlock Name="CombResultTextBlock" FontWeight="Bold" FontSize="18"/>
                </StackPanel>
            </TabItem>

            <!-- Вкладка 2: Регистр -->
            <TabItem Header="10-битный регистр">
                <StackPanel Margin="10">
                    <TextBlock Text="T-входы (10 символов 0/1):" FontSize="16"/>
                    <TextBox Name="TInputsTextBox" PreviewTextInput="RegisterInputsTextBox_PreviewTextInput"
                             FontSize="16" Height="35" Text="0000000000" Margin="0,5,0,10"/>
                    <TextBlock Text="S-входы (10 символов 0/1):" FontSize="16"/>
                    <TextBox Name="SInputsTextBox" PreviewTextInput="RegisterInputsTextBox_PreviewTextInput"
                             FontSize="16" Height="35" Text="0000000000" Margin="0,5,0,10"/>
                    <TextBlock Text="R-входы (10 символов 0/1):" FontSize="16"/>
                    <TextBox Name="RInputsTextBox" PreviewTextInput="RegisterInputsTextBox_PreviewTextInput"
                             FontSize="16" Height="35" Text="0000000000" Margin="0,5,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Обновить" Click="UpdateRegisterButton_Click"
                                Width="140" Height="45" FontSize="16" Margin="0,0,10,0"/>
                        <Button Content="Сброс" Click="ResetRegisterButton_Click"
                                Width="140" Height="45" FontSize="16" Margin="0,0,10,0"/>
                        <Button Content="Инвертировать" Click="InvertRegisterButton_Click"
                                Width="160" Height="45" FontSize="16"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Сдвиг:" VerticalAlignment="Center" FontSize="16" Margin="0,0,10,0"/>
                        <TextBox Name="ShiftValueTextBox" Width="80" Height="35"
                                 PreviewTextInput="ShiftInputTextBox_PreviewTextInput"
                                 FontSize="16" Text="1" Margin="0,0,10,0"/>
                        <Button Content="Сдвинуть" Click="ShiftRegisterButton_Click"
                                Width="140" Height="45" FontSize="16"/>
                    </StackPanel>

                    <TextBlock Text="Состояние регистра:" FontSize="16"/>
                    <TextBlock Name="RegisterStateTextBlock" FontWeight="Bold" FontSize="18" Margin="0,5,0,10"/>

                    <StackPanel Orientation="Horizontal">
                        <Button Content="Сохранить" Click="SaveRegisterButton_Click"
                                Width="140" Height="45" FontSize="16" Margin="0,0,10,0"/>
                        <Button Content="Загрузить" Click="LoadRegisterButton_Click"
                                Width="140" Height="45" FontSize="16"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <!-- Вкладка 3: Сравнение регистров -->
            <TabItem Header="Сравнение регистров">
                <StackPanel Margin="10">
                    <!-- Регистр 1 -->
                    <TextBlock Text="Регистр 1:" FontSize="16" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                        <StackPanel>
                            <TextBlock Text="T-входы" FontSize="14"/>
                            <TextBox Name="Comp1TInput" Width="200" Height="35"
                                     PreviewTextInput="RegisterInputsTextBox_PreviewTextInput"
                                     FontSize="16" Text="0000000000" Margin="0,0,10,0"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="S-входы" FontSize="14"/>
                            <TextBox Name="Comp1SInput" Width="200" Height="35"
                                     PreviewTextInput="RegisterInputsTextBox_PreviewTextInput"
                                     FontSize="16" Text="0000000000" Margin="0,0,10,0"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="R-входы" FontSize="14"/>
                            <TextBox Name="Comp1RInput" Width="200" Height="35"
                                     PreviewTextInput="RegisterInputsTextBox_PreviewTextInput"
                                     FontSize="16" Text="0000000000"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Регистр 2 -->
                    <TextBlock Text="Регистр 2:" FontSize="16" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                        <StackPanel>
                            <TextBlock Text="T-входы" FontSize="14"/>
                            <TextBox Name="Comp2TInput" Width="200" Height="35"
                                     PreviewTextInput="RegisterInputsTextBox_PreviewTextInput"
                                     FontSize="16" Text="0000000000" Margin="0,0,10,0"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="S-входы" FontSize="14"/>
                            <TextBox Name="Comp2SInput" Width="200" Height="35"
                                     PreviewTextInput="RegisterInputsTextBox_PreviewTextInput"
                                     FontSize="16" Text="0000000000" Margin="0,0,10,0"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="R-входы" FontSize="14"/>
                            <TextBox Name="Comp2RInput" Width="200" Height="35"
                                     PreviewTextInput="RegisterInputsTextBox_PreviewTextInput"
                                     FontSize="16" Text="0000000000"/>
                        </StackPanel>
                    </StackPanel>

                    <Button Content="Сравнить" Click="CompareRegistersButton_Click"
                            Width="140" Height="45" FontSize="16" Margin="0,0,0,10"/>
                    <TextBlock Name="CompareResultTextBlock" FontWeight="Bold" FontSize="18"/>
                </StackPanel>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
